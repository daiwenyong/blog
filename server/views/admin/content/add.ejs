<%- include('../layout.ejs')%>
<div class="container-fluid">
  <ol class="breadcrumb">
    <li><a href="/api/admin/category/showAdd">内容首页</a></li>
    <li class="active">内容添加</li>
  </ol>
  <h3>内容添加</h3>


  <form method="post">
    <div class="form-group">
      <label>分类</label>
      <select  name="category" class="form-control">
        <% for(let i=0;i<results.length;i++){%>
           <option value="<%= results[i]._id %>"><%= results[i].name%></option>
        <%}%>
      </select>
    </div>
    <div class="form-group">
      <label>图片地址</label>
      <input type="text" class="form-control" name="url">
    </div>
    <div class="form-group">
      <label>标题</label>
      <input type="text" class="form-control" name="title">
    </div>
    <div class="form-group">
      <label>简介</label>
      <input type="text" class="form-control" name="description">
    </div>

    <div class="form-group">
      <label>内容</label>
      <textarea class="form-control" rows="20" name="content"></textarea>
    </div>


    <button type="submit" class="btn btn-default">点击添加分类</button>
  </form>
  </div>
